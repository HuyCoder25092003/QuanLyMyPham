@model QLMP.Common.Req.LoaiSpReq
<link rel="stylesheet" href="@(Url.Content("~/css/styles.css"))" /> 
@{
    ViewData["Title"] = "Update";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<h1>Update</h1>

<h4>Loại Sản Phẩm</h4>
<hr />
<div class="row container">
    <div class="col-md-4">
        <tbody>
            <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <table>
                <tr class="form-group">
                <td> <label asp-for="TenLoaiSp" class="control-label">Tên Loại Sản Phẩm: </label></td>
                <td><input asp-for="TenLoaiSp" class="form-control" /></td>
                <td> <span asp-validation-for="TenLoaiSp" class="text-danger"></span></td>
                </tr>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
             </table> 
            </form>
        </tbody>
    </div>
 
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
