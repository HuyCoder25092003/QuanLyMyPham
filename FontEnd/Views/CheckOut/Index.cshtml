@Model FrontEnd.Models.HoaDonVM
   @{
                                    var tong = 0;
                                }
<!doctype html>
<html lang="zxx">
 
<head>
    <style>
        .checkout_area {
            padding-top: 20px;
        }

        .order_box {
            background: #f9f9f9;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .order_box h2 {
            margin-bottom: 20px;
            font-size: 24px;
            font-weight: bold;
            text-align: center;
        }

        .order_box .list,
        .order_box .list_2 {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .order_box .list li,
        .order_box .list_2 li {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #eee;
        }

        .order_box .list li.header {
            font-weight: bold;
        }

        .order_box .list li:last-child,
        .order_box .list_2 li:last-child {
            border-bottom: none;
        }

        .order_box .list li span {
            flex: 1;
            text-align: left;
        }

        .order_box .list li .middle {
            text-align: center;
            flex: 0 0 20%;
        }

        .order_box .list li .last {
            text-align: right;
            flex: 0 0 30%;
        }

        .order_box .separator {
            text-align: center;
            width: 100%;
            display: block;
            margin: 5px 0;
        }

        .order_box .list_2 li a {
            display: flex;
            justify-content: space-between;
            font-weight: bold;
            font-size: 18px;
            color: #333;
            text-decoration: none;
        }
    </style>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
